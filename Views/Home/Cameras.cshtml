@model List<Camera>
@{
    ViewData["Title"] = "Cameras";
}

    <div class="text-center">
        <h1 class="jumbotron">Favorite Cameras</h1>
        <p>This Page is to showcase a compilation of Logan's Favorite Cameras.</p>

		<div class="content">
		<pre class="divider" style="font-size:5px; font-weight: bold; font-family: 'Source Code Pro';"> 
